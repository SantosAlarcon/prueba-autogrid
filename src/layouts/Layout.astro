---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Prueba de auto-grid con CSS" />
		<meta name="viewport" content="width=device-width" />
		<meta name="og:title" content="Prueba de auto-grid con CSS" />
		<meta name="og:description" content="Prueba de auto-grid con CSS" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
	    --accent: 136, 58, 234;
	    --accent-light: 224, 204, 250;
	    --accent-dark: 49, 10, 101;
	    --accent-gradient: linear-gradient(
		    45deg,
		    rgb(var(--accent)),
		    rgb(var(--accent-light)) 30%,
		    white 60%
	    );

	    --foreground: #112;
	    --background: #eef;
	    --background-end-gradient: #dde;
	    --box-shadow: #1145;
	    --border: #1145;

	    @media (prefers-color-scheme: dark) {
		--foreground: #eee;
		--background: #112;
		--background-end-gradient: #001;
		--box-shadow: #0019;
		--border: #eef4;
	    }
	}
	html {
	    font-family: system-ui, sans-serif;
	    background: var(--background);
	    color: var(--foreground);
	    text-align: center;
	}
	code {
	    font-family:
		    Menlo,
		    Monaco,
		    Lucida Console,
		    Liberation Mono,
		    DejaVu Sans Mono,
		    Bitstream Vera Sans Mono,
		    Courier New,
		    monospace;
	}
</style>
